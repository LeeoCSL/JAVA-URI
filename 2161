import java.io.IOException;
import java.util.Scanner;

public class Main {
 
    public static void main(String[] args) throws IOException {
 
    Scanner entrada = new Scanner(System.in);
		double n;
		double ans = 0.0;
		n = entrada.nextDouble();
    
		while(n>0){
			ans+=6.0;
			ans = 1.0/ans;
			n--;
		}
    
		ans += 3.0;
		  System.out.printf("%.10f\n", ans);
 
    }
 
}
